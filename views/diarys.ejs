<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/header.ejs') %>

  <body>

    <div class="diarys content">
      <h1>All Diarys</h1>
      <% if (diarys.length > 0) { %> <% diarys.forEach(diary => { %>

      <a class="single" href="/diarys/<%= diary.id %>">
        <h3 class="title"><%= diary.title %></h3>
        <p class="body"><%= diary.body %></p>
      </a>
      <% }) %> <% } else { %>
      <p>There are no blogs to display...</p>

      <% } %>
    </div>
    <%- include('./partials/footer.ejs') %>
  </body>
</html>
